            <label class="sexo"  for="r2" class="labelsexo">Mujer</label>
            <!--<input type="radio" class="radio"  name="user[sexo]" value="mujer"> Mujer-->
            <input type="radio" id="r2" class="radio" name="user[sexo]" value="mujer">
    </div>          
    <input class="btn" type="submit" value="Registrarse">
    
</div>
