<div id="ingresar">
    <h2 class="titulo-section">Registrar</h2>
<div id="form-registro">
    <div>
        <label for="nombre">Usuario: </label>
        <input id="nombre" type="text" placeholder="Ejemplo: eduardo" name="user[username]" required>
    </div>

    <div>
        <label for="nip">NIP: </label>
        <input id="nip" type="password" pattern="[0-9]{4}" placeholder="Inserte 4 dÃ­gitos" name="user[password]" required >
    </div>  

    <div>
        <label for="correo">E-mail: </label>
        <input id="correo" type="email" placeholder="Ejemplo_correo@mail.com" name="user[correo]" >
    </div>

    <div>
        <label for="edad">Edad: </label>
        <input id="edad" type="number" placeholder="Ingrese su edad" name="user[edad]" required>
    </div>
    <div class="peso">
        <label for="peso">Peso: </label>
        <input id="peso" type="number" placeholder="Peso actual" name="user[peso]" required>
    </div>
    <div class="radios">
        <label class="sex">Sexo: </label>
        <label class="sexo" for="r1"class="labelsexo">Hombre</label>
            <!--<input type="radio" class="radio" name="user[sexo]" value="hombre" checked> Hombre-->
