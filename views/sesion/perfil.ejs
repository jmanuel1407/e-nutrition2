        <h4>Usuario: </h4> <p><%=session.user.username%></p>
    </div>

    <div>
        <h4>Peso: <%=session.user.id%> </h4> <p><%=session.user.peso%></p>
    </div>

</div>
	<a href="/notas"></a><br>
