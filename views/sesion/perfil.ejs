<div id="perfil">

	<h2 class="titulo-section">Control</h2><br>
    <figure id="foto-perfil">
  <img src= "/images/<%=session.user.image%>" alt="Perfil">
    </figure>
    <a class="btn" href="/user/<%=session.user.id%>/edit"><button>Editar</button></a>

<div class="informacion-perfil">
    <h3>Informaci√≥n de perfil</h3>
